#!/usr/bin/env bash
# File to write messages
output_file="/tmp/my_process"

# Infinite loop to write "I am alive!" every 2 seconds
while true; do
    echo "I am alive!" >> "$output_file"
    sleep 2
done

pid_file="/var/run/my_process.pid"
script_path="/path/to/manage_my_process"

start() {
    if [ -f "$pid_file" ]; then
        echo "Process is already running."
        exit 1
    fi

    echo "Starting manage_my_process..."
    nohup "$script_path" &> /dev/null &
    echo $! > "$pid_file"
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$pid_file" ]; then
        echo "Process is not running."
        exit 1
    fi

    pid=$(cat "$pid_file")
    echo "Stopping manage_my_process (PID: $pid)..."
    kill "$pid"
    rm -f "$pid_file"
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
